---
import "@fontsource-variable/onest";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    /* Sizes */
    --portfolio-width: 60vw;
    --nav-height: 100px;
    /* Fonts */
    --font-size-name-title: clamp(
      1.25rem,
      0.7473rem + 2.8723vw,
      5.3125rem
    ); /* 60vh - min font 20, max font 85, max vp 2543, min vp 280 */
    --font-size-name-subtitle: calc(var(--font-size-name-title) / 1.7);
    --font-size-title-section: clamp(
      1.75rem,
      1.5335rem + 1.2373vw,
      3.5rem
    ); /* 28px 56px */
    --font-size-subtitle-section: clamp(
      1rem,
      0.9072rem + 0.5303vw,
      1.75rem
    ); /*28px 16px */
    --font-size-nav: clamp(0.9375rem, 0.8988rem + 0.2209vw, 1.25rem);
    --font-size-logo-nav: clamp(0.875rem, 0.7977rem + 0.4419vw, 1.5rem);
    --font-size-paragraph: clamp(
      0.75rem,
      0.6727rem + 0.4419vw,
      1.375rem
    ); /* min font 12, max font 22, max vp 2543, min vp 280 */
    color: var(--primary-color);
    color-scheme: dark light;
    scroll-behavior: smooth;
  }

  /* Colors Dark Theme */
  html.dark {
    --primary-color: #d1d5db;
    --secondary-color: #c2c2c2;
    --color-violet-one: #8332ff;
    --color-violet-two: #451b8c;
    --color-lilac-one: #d8ccf1;

    --bg-color: #010409;
    --secondary-bg-color: #0d1117;
    --border-color: #0b0d0fab;
    --secondary-border-color: #514d4db3;

    --bg-button-color: #21262d;
    --border-button-color: #363b42;

    --nav-bg-color: rgba(0, 0, 0, 0.12);
  }
  /* Colors Light Theme */
  html {
    --primary-color: #000;
    --secondary-color: #555555;
    --color-violet-one: #8332ff;
    --color-violet-two: #451b8c;
    --color-lilac-one: #8f6bd8;

    --bg-color: #f5f5f5;
    --secondary-bg-color: #ededed; /*#dee0e3 */
    --border-color: #d0d7de;
    --secondary-border-color: #9d9b9bbf;
    --bg-button-color: #f6f8fa;
    --border-button-color: #d0d7de;

    --nav-bg-color: rgba(255, 255, 255, 0.12);
  }

  a {
    opacity: 0.6;
  }
  a:hover {
    opacity: 0.87;
  }

  p {
    font-size: var(--font-size-paragraph);
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    background: var(--bg-color);
  }

  /* Responsive */
  @media (width <= 1250px) {
    :root {
      --portfolio-width: 80vw;
      --font-size-name-title: clamp(
        0.9375rem,
        0.0354rem + 5.1546vw,
        4.0625rem
      ); /* 80vh - min font 15, max font 65, max vp 1250, min vp 280  */
    }
  }
  /* Responsive mobile navbar */
  @media only screen and (max-width: 1000px) {
    :root {
      --nav-height: 70px;
    }
  }

  /* Disable animations */
  @media (prefers-reduced-motion) {
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
