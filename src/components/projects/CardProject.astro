---
import GrayBadge from "../badges/GrayBadge.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  techs?: string[];
  url?: string;
}

const model: Props = Astro.props;
---

<div
  class="flex flex-col flex-1 max-w-[380px] min-w-[280px] bg-white dark:bg-gray-900 shadow-2xl rounded-lg overflow-hidden"
>
  <div class="flex-shrink-0">
    <img
      src="/placeholder.svg"
      alt="Project Image"
      width="400"
      height="300"
      class="h-48 w-full object-cover rounded-t-lg"
      style="aspect-ratio: 400 / 300; object-fit: cover;"
    />
  </div>

  <div class="flex-1">
    <p class="text-2xl font-bold text-gray-900 dark:text-gray-100">
      Project Name
    </p>
    <div class="mt-2 flex gap-2">
      <span
        class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-200 text-green-900"
      >
        JavaScript
      </span>
      <span
        class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-200 text-blue-900"
      >
        CSS
      </span>
      <span
        class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-red-200 text-red-900"
      >
        HTML
      </span>
    </div>
  </div>
  <div class="flex-grow">
    <p class="mt-2 text-base text-gray-500 dark:text-gray-400">
      {model.description}
    </p>
  </div>

  <div class="flex mt-auto items-center">
    <div class="flex-shrink-0">
      <a
        href="#"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800"
      >
        View on GitHub
      </a>
    </div>
  </div>
</div>
