---
import GrayBadge from "../badges/GrayBadge.astro";
import ButtonContainer from "../buttons/ButtonContainer.astro";
import type { CardProjectModel } from "./CardProjectModel";
import { t } from "i18next";
import { Image } from "astro:assets";
interface Props {
  data: CardProjectModel;
}

const model: Props = Astro.props;

model.data.techs = model.data.techs || [];
---

<li
  class="card flex flex-col mx-auto outline outline-[0.25rem] outline-[--border-color] rounded-xl flex-1 w-auto bg-[--secondary-bg-color] overflow-hidden"
>
  <div class="flex-shrink-0">
    <Image
      class="h-auto w-full object-cover rounded-t-lg"
      src={model.data.image}
      alt={model.data.title ?? "Generic"}
      width="479"
    />
  </div>
  <div class="h-full flex flex-col">
    <div class="px-6 pt-6 h-full">
      <div class="flex-1 flex flex-col h-full">
        <h2 class="font-bold">
          {model.data.title ?? "Generic"}
        </h2>
        <div class="mt-2 mb-auto flex gap-2 flex-wrap flex-1">
          {
            model.data.techs.map((tech) => (
              <span>
                <GrayBadge>{tech}</GrayBadge>
              </span>
            ))
          }
        </div>
        <div class="description-container py-3">
          <p class="mt-2 description">
            {model.data.description}
          </p>
        </div>
      </div>
    </div>

    <div class="card-buttons gap-4 flex px-6 w-full cursor-pointer mb-3">
      <ButtonContainer
        classesOutside="w-full"
        classesInside="bg-[--bg-button-color]"
      >
        <a
          href={model.data.url}
          onclick="playSound()"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex w-full opacity-[100%] gap-1 items-center justify-center px-5 py-1 border border-transparent text-base font-medium"
        >
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-[1.1rem]"
            >
              <path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path>
              <path d="M9 18c-4.51 2-5-2-7-2"></path>
            </svg>
          </span>
          {t("BUTTONS.VIEW_CODE")}
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-[1.1rem]"
              viewBox="0 0 24 24"
            >
              <path
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-6m-7 1l9-9m-5 0h5v5"
              >
              </path>
            </svg>
          </span>
        </a>
      </ButtonContainer>
    </div>
  </div>
</li>
<style>
  .description {
    font-size: clamp(0.75rem, 0.7036rem + 0.2651vw, 1.125rem);
  }
  @media (width <= 430px) {
    .card {
      max-width: 320px;
      min-width: 230px;
    }

    .card-buttons {
      flex-direction: column-reverse;
      gap: 0.5rem;
      align-items: none;
      padding: 0 2rem;
      padding-top: 1rem;
    }
  }
</style>
