---
import Card from "../cards/Card.astro";
import LangsInfo from "./LangsInfo.astro";
import Bio from "./Bio.astro";
import Title from "../utils/Title.astro";
import DownloadButton from "../buttons/DownloadButton.astro";
---

<div id="about-me"></div>
<article class="pt-24 px-4">
  <Card padding="2.5rem">
    <div class="flex flex-col gap-6">
      <!--  Title  -->
      <div class="flex">
        <Title>Sobre mí</Title>
      </div>
      <div class="flex about-content justify-between gap-x-5">
        <div class="basis-3/5 text-wrap flex flex-col gap-y-2">
          <!--  Bio Text  -->
          <Bio class="flex flex-col gap-2" />
          <!--  Langs & Tech Info  -->
          <LangsInfo />
        </div>
        <!--  Avatar  -->
        <div class="content-avatar flex justify-start">
          <div
            class="bg-[--border-color] rounded-xl outline outline-[--secondary-border-color] h-fit w-fit p-1"
          >
            <img
              class="avatar bg-[--secondary-bg-color] rounded-[--nested-radius]"
              src="https://avatars.githubusercontent.com/u/39011276?v=4"
              alt="Foto de Gabriel Alberto García Pellizzón"
              title="Foto de Gabriel Alberto García Pellizzón"
              width="300px"
              height="300px"
            />
          </div>
          <!--  Download CV Button  -->
          <DownloadButton />
        </div>
      </div>
    </div>
  </Card>
</article>

<style>
  #about-me {
    width: 100%;
    height: 100%;
  }

  span {
    width: var(--font-size-title-section);
    display: flex;
  }
  span svg {
    width: 100%;
    height: 100%;
  }

  .content-avatar {
    --nested-radius: calc(0.75rem - 0.25rem); /* radius outside - padding */

    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    gap: 1rem;
  }

  .avatar {
    width: 100%;
    max-width: 250px;
  }

  @media (width <= 1250px) {
    .about-content {
      flex-direction: column-reverse;
      gap: 1rem;
    }
  }
</style>
